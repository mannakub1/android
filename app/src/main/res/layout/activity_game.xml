<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.manny.guessnumber.GameActivity"
    android:background="#38a685"
    android:id="@+id/man">

    <TextView android:text="XX" android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="58dp"
        android:textSize="100sp"
        android:id="@+id/guess_number_text_view"
        android:gravity="center"
        android:background="@color/incorrect_guess"
        android:textColor="#fffcfe"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Guess Number\nGame"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:gravity="center_horizontal"
        android:textSize="30sp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold"
        android:textColor="#fffcfe" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/result_text_view"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/guess_number_text_view"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/linearLayout"></LinearLayout>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/input"
        android:layout_alignBottom="@+id/linearLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/guess_button"
        android:layout_toStartOf="@+id/guess_button"
        android:layout_weight="1"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guess"
        android:id="@+id/guess_button"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/guess_number_text_view"
        android:layout_toEndOf="@+id/guess_number_text_view" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/guess_level"
        android:textSize="20sp"
        android:textColor="#fffcfe"
        android:textStyle="bold"
        android:layout_alignTop="@+id/textView3"
        android:layout_toRightOf="@+id/textView3"
        android:layout_toEndOf="@+id/textView3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Level :"
        android:id="@+id/textView3"
        android:textColor="#fffcfe"
        android:textStyle="bold"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/textView2"
        android:layout_alignLeft="@+id/guess_number_text_view"
        android:layout_alignStart="@+id/guess_number_text_view"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp"
        android:layout_weight ="1"/>

</RelativeLayout>
